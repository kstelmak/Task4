@model User
@{
    ViewData["Title"] = "CREATE USER";
}

<h1 class="bg-primary text-white p-2 rounded">Create user</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary my-2">Back</a>


<form method="post">
    <div class="form-group my-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="d-none">
        <input asp-for="FirstLogin" value="n" visibility="hidden" />
        <input asp-for="LastLogin" value="n" visibility="hidden" />
        <input asp-for="Status" value="Active" visibility="hidden" />
    </div>
    <button type="submit" asp-controller="Account" asp-action="Create" class="btn btn-primary my-2">Create</button>
</form>
