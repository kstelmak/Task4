@model Login
@{
    ViewData["Title"] = "Log In";
}

<h1 class="bg-primary text-white p-2 rounded">Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Login" method="post">    
    <div class="form-group my-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="my-2">
    <button class="btn btn-primary mr-1" type="submit">Log In</button>
    <a asp-controller="Account" asp-action="Create" class="btn btn-outline-primary mx-1">Create a new user</a>
    </div>
</form>
